<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="5"
    android:columnCount="4"
    android:orientation="horizontal"
    >

    <TextView
        style="@style/grid"
        android:text="1"
        />

    <TextView
        style="@style/grid"
        android:text="2"
        />

    <TextView
        style="@style/grid"
        android:text="3"
        />

    <TextView
        style="@style/grid"
        android:text="/"
        />

    <TextView
        style="@style/grid"
        android:text="4"
        />

    <TextView
        style="@style/grid"
        android:text="5"
        />

    <TextView
        style="@style/grid"
        android:text="6"
        />

    <TextView
        style="@style/grid"
        android:text="x"
        />

    <TextView
        style="@style/grid"
        android:text="7"
        />

    <TextView
        style="@style/grid"
        android:text="8"
        />

    <TextView
        style="@style/grid"
        android:text="9"
        />

    <TextView
        style="@style/grid"
        android:text="-"
        />

    <TextView
        style="@style/grid"
        android:text="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        />

    <TextView
        style="@style/grid"
        android:text="."
        />

    <TextView
        style="@style/grid"
        android:layout_gravity="fill"
        android:text="+"
        android:layout_rowSpan="2"
        />

    <TextView
        style="@style/grid"
        android:text="="
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        />


</GridLayout>
