<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="#3999"
    tools:context="com.android.administrator.myapplication.view.Activity.Main5Activity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ovil_shape"
        />

    <TextView
        android:id="@+id/tv_name"
        style="@style/tv_nameVSage"
        android:layout_marginLeft="12dp"
        android:text="@string/tv_name"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toTopOf="@id/img"
        />

    <TextView
        android:id="@+id/tv_age"
        style="@style/tv_nameVSage"
        android:layout_marginLeft="12dp"
        android:text="@string/tv_age"
        app:layout_constraintBottom_toBottomOf="@id/img"
        app:layout_constraintLeft_toRightOf="@id/img"
        />

    <TextView
        android:id="@+id/tv_name_value"
        style="@style/tv_ageVSage_value"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        />

    <TextView
        android:id="@+id/tv_age_value"
        style="@style/tv_ageVSage_value"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_age"
        app:layout_constraintLeft_toRightOf="@id/tv_age"
        />
</android.support.constraint.ConstraintLayout>
